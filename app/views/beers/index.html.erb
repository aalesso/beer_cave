<div class="page-header">
  <h1>
    Beers
    <a href="/beers/new" class="btn btn-lg btn-success">New Beer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Category</th>
        <th>Name.string</th>
        <th>User</th>
        <th>Fellow imbibers</th>
        <th>Favorite</th>
        <th>Year</th>
        <th>Rating</th>
        <th>Notes</th>
        <th>Grape</th>
        <th>Country</th>
        <th>Photo</th>
        <th>Actions</th>
      </tr>

      <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.category %></td>
        <td><%= beer.name.string %></td>
        <td><%= beer.user_id %></td>
        <td><%= beer.fellow_imbibers %></td>
        <td><%= beer.favorite %></td>
        <td><%= beer.year %></td>
        <td><%= beer.rating %></td>
        <td><%= beer.notes %></td>
        <td><%= beer.grape %></td>
        <td><%= beer.country %></td>
        <td><%= beer.photo %></td>
        <td>
          <a href="/beers/<%= beer.id %>" class="btn btn-primary">Show</a>
          <a href="/beers/<%= beer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_beer/<%= beer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
