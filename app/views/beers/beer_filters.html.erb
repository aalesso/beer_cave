<div class="page-header">
  <h1>
    <%= params[:my_category] %> Wine
    <a href="/beers/new" class="btn btn-sm btn-primary">Add a Bottle</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photo</th>
        <th>Favorite</th>
        <th>Category</th>
        <th>Name</th>
        <th>Year</th>
        <th>Rating</th>
        <th>Notes</th>
        <th>Grape</th>
        <th>Country</th>
        <th>Actions</th>
      </tr>

      <% @beers.each do |beer| %>
      <tr>
          <td><img src="<%= beer.photo %>" width="150" class="img-responsive"></td>
        <td><%= beer.favorite %></td>
        <td><%= beer.category %></td>
        <td><%= beer.name %></td>
        <td><%= beer.year %></td>
        <td><%= beer.rating %></td>
        <td><%= beer.notes %></td>
        <td><%= beer.grape %></td>
        <td><%= beer.country %></td>
        <td>
      <a href="/beers/<%= beer.id %>" class="btn btn-xs btn-default">Show</a>
          <a href="/beers/<%= beer.id %>/edit" class="btn btn-xs btn-default">Edit</a>
          <a href="/delete_beer/<%= beer.id %>" class="btn btn-xs btn-default" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
